{
    "luci-app-gateway": {
        "description": "Grant UCI access to gateway configuration",
        "read": {
            "ubus": {
                "uci": [
                    "get"
                ],
                "sensecap": [
                    "reboot_host",
                    "shutdown_host"
                ]
            }
        },
        "write": {
            "ubus": {
                "uci": [
                    "set",
                    "commit"
                ],
                "sensecap": [
                    "reboot_host",
                    "shutdown_host"
                ]
            }
        }
    }
}
