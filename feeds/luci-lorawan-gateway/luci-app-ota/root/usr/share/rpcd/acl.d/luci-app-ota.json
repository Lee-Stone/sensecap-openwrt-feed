{
        "luci-app-ota": {
                "description": "Grant access to OTA firmware upgrade",
                "read": {
                        "file": {
                                "/tmp/firmware.img.tar.gz": [
                                        "read"
                                ],
                                "/tmp/firmware.img.tar.gz.progress": [
                                        "read"
                                ],
                                "/var/run/ota/ota.log": [
                                        "read"
                                ],
                                "/var/run/ota/*": [
                                        "read",
                                        "list"
                                ],
                                "/version.txt": [
                                        "read"
                                ]
                        },
                        "ubus": {
                                "file": [
                                        "exec",
                                        "read",
                                        "stat"
                                ]
                        }
                },
                "write": {
                        "file": {
                                "/bin/sh": [
                                        "exec"
                                ],
                                "/bin/tar": [
                                        "exec"
                                ],
                                "/sbin/reboot": [
                                        "exec"
                                ],
                                "/tmp/firmware.img.tar.gz": [
                                        "write"
                                ],
                                "/tmp/firmware.img.tar.gz.part": [
                                        "write"
                                ],
                                "/tmp/firmware.img.tar.gz.progress": [
                                        "write"
                                ],
                                "/var/run/ota/*": [
                                        "write"
                                ],
                                "/bin/ota": [
                                        "exec"
                                ]
                        },
                        "ubus": {
                                "file": [
                                        "exec",
                                        "write",
                                        "remove"
                                ],
                                "system": [
                                        "reboot"
                                ]
                        }
                }
        }
}